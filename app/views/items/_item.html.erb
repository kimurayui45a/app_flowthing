<article id="item_<%= item.id %>", class="item-card-container">
    <details class="details-box">
      <summary class="item-summary-style"><%= item.item_name %></summary>
      <span><%= item.created_at.strftime("%Y年%m月%d日 %H:%M") %></span>
    </details>
    <section class="item-objectbox">

      
      <div class="icon-object">
        <%= link_to item_path(item) do %>
          <% if item.image_choice.present? %>
            <% case item.image_choice %>
              <% when 'item_image' %>
                <% if item.item_image.present? %>
                  <%= image_tag item.item_image.url, class: "user-profileicon" %>
                <% end %>
              <% when 'item_canvas' %>
                  <canvas class="itemfabric canvas-style" id="itemCanvas_<%= item.id %>" 
                  data-canvas-json='<%= item.item_canvas.to_json.html_safe %>'></canvas>
              <% else %>
                <div class="no-image-icon">No Image</div>
            <% end %>
          <% end %>
        <% end %>
      </div>
      

      <div class="item-flex">
        <div class="icon-scale">
          <%= link_to sub_user_path(item.sub_user) do %>
            <% sub_user = item.sub_user %>
            <% if sub_user.icon_choice.present? %>
              <% case sub_user.icon_choice %>
              <% when 'sub_image' %>
                  <!-- sub_image の内容を表示 -->
                  <% if sub_user.sub_image.present? %>
                      <%= image_tag sub_user.sub_image.url, class: "user-itemlist-icon" %>
                  <% end %>
              <% when 'sub_canvas' %>
                  <!-- sub_canvas の内容を表示 -->
                  <canvas class="itemfabric myCanvas-icon canvas-style" id="subCanvas_<%= item.id %>" 
                          data-canvas-json='<%= sub_user.sub_canvas.to_json.html_safe %>'></canvas>
              <% when 'sub_color' %>
                  <!-- sub_color の内容を表示 -->
                  <div style="background-color: <%= sub_user.sub_color %>;" class="user-itemlist-icon"></div>
              <% else %>
                  <div class="no-image-icon">No Image</div>
              <% end %>
            <% end %>
          <% end %>
        </div>

        <div>
          <%= link_to "#", class: "edit-memo-link" do %>
            <i class="bi bi-pencil-fill"></i>
          <% end %>
        </div>

        <div>
          <%= link_to item_path(item), class: "delete-memo-link", data: { turbo_method: :delete, turbo_confirm: t('items.item.delete_confirm') } do %>
            <i class="bi bi-trash-fill"></i>
          <% end %>
        </div> 
      </div> 
    </section>
</article>
