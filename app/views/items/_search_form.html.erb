<div class="search-text">
  <%= search_form_for @q, url: items_path, method: :get do |f| %>
  <div class="search-form-container">
    <div class="search-field">
      <%= f.label :item_name_or_item_text_or_item_place_cont, t('items.search_form.search_keyword') %><br>
      <%= f.search_field :item_name_or_item_text_or_item_place_cont, class: "search-form" %>
    </div>
    <div class="search-options">
      <%= f.label :s, t('items.search_form.search') %><br>
      <%= f.check_box :s, { include_hidden: false }, 'items.updated_at asc', 'items.updated_at desc' %>
    </div>
  </div>
  <div class="search-actions">
    <%= f.submit t('items.search_form.search_btn'), class: "search-btn" %>
  </div>

  <% end %>
</div>
