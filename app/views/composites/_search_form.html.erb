
<div class="search-text">
  <%= search_form_for @q, url: composites_path, method: :get do |f| %>
  <div class="search-form-container">
    <div class="search-field">
      <%= f.label :composite_name_or_composite_text_cont, t('composites.search_form.search_keyword') %><br>
      <%= f.search_field :composite_name_or_composite_text_cont, class: "search-form" %>
    </div>
    <div class="search-options">
      <%= f.label :s, t('composites.search_form.search') %><br>
      <%= f.check_box :s, { include_hidden: false }, 'composites.updated_at asc', 'composites.updated_at desc' %>
    </div>
  </div>
  <div class="search-actions">
    <%= f.submit t('composites.search_form.search_btn'), class: "search-btn" %>
  </div>

  <% end %>
</div>
