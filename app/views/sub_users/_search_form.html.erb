<div class="search-text">
  <%= search_form_for @q, url: sub_users_path, method: :get do |f| %>
  <div class="search-form-container">
    <div class="search-field">
      <%= f.label :sub_name_or_sub_text_cont, t('sub_users.search_form.search_keyword') %><br>
      <%= f.search_field :sub_name_or_sub_text_cont, class: "search-form" %>
    </div>
    <div class="search-options">
      <%= f.label :s, t('sub_users.search_form.search') %><br>
      <%= f.check_box :s, { include_hidden: false }, 'sub_users.updated_at asc', 'sub_users.updated_at desc' %>
    </div>
  </div>
  <div class="search-actions">
    <%= f.submit t('sub_users.search_form.search_btn'), class: "search-btn" %>
  </div>

  <% end %>
</div>
