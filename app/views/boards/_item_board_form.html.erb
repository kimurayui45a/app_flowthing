
<div class="flex-column">
<div class="form-card">
  <div class="board-card-background flex-column">
    <div class="flex-column">

      <div class="form-card-container">
<div style="margin-top: 3.5rem;">
<div class="flex">
      <% if item.image_choice.present? %>
      <% if item.image_choice == 'item_image' && item.item_image.present? %>
        <%= image_tag item.item_image.url, class: "user-profileicon" %>
      <% elsif item.image_choice == 'item_canvas' && item.item_canvas.present? %>
        <div class="canvas-container-parent">

          <img src="<%= item.item_canvas %>" alt="Canvas Image" style="object-fit: contain;" class="user-profileicon" >
        </div>
      <% else %>
        <div class="no-image-icon">No Image</div>
      <% end %>
    <% end %>
    </div>



        <div class="board-createform-text">
          <div class="user-createform-text">
            <%= f.label t('.title') %><span class="red-text"> <%= t('.contents_note') %></span>
            <%= f.text_field :board_title, class: "form-control board-item-form", id: "board_title" %>
          </div>
          <div class="user-createform-text">
            <%= f.label t('.text') %><span class="red-text"> <%= t('.contents_note') %></span>
            <%= f.text_area :board_text, class: "form-control board-item-form", row: 10, style: "height: 200px", id: "board_text" %>
          </div>
        </div>

        </div>

      </div>
    </div>
  </div>
</div>
</div>