
<% content_for(:title, t('.title')) %>
<div class="max1280-container">
  <div>
    <h1 class="section-title">
      <span class="red-text">新規作成</span>
    </h1>
    <%= form_with url: create_all_path, id: 'user_create_form', method: :post, multipart: true do |f| %>
      <%= render 'shared/error_messages', object: @sub_user %>
      <%= render 'shared/error_messages', object: @item %>


      <%= render 'sub_users/form', f: f, sub_user: @sub_user %>
      <%= render 'items/form', f: f, item: @item %>

    <div class="user-createform">
      <%= f.submit "途中保存", class: "btn btn-warning", name: "save_draft", id: "save-draft-button" %>
      <%= f.submit "データ送信", class: "btn btn-success", id: "submit-button" %>
    </div>
    <% end %>
  </div> 
</div>




