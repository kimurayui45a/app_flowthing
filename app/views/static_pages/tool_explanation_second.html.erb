              <td>◯</td>
              <td><%= image_tag('miri_image.png', alt: 'ミリペン試し書き', class: "brush-sample-image") %></td>
              <td><%= image_tag('miri_blur.png', alt: 'ぼかし機能付きミリペン試し書き', class: "brush-sample-image") %></td>
            </tr>
