              <td>◯</td>
              <td>◯</td>
              <td><%= image_tag('pencil_image.png', alt: 'エアブラシペン試し書き', class: "brush-sample-image") %></td>
              <td><%= image_tag('pencil_blur.png', alt: 'ぼかし機能付きエアブラシペン試し書き', class: "brush-sample-image") %></td>
            </tr>
