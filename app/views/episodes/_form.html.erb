                  <div class="freepalletBox"><div class="palletBox" id="palletbox20-3"></div></div>
                </div>
                <div>
                  <div class="freepalletBox"><div class="palletBox" id="palletbox21-3"></div></div>
                  <div class="freepalletBox"><div class="palletBox" id="palletbox22-3"></div></div>
                  <div class="freepalletBox"><div class="palletBox" id="palletbox23-3"></div></div>
