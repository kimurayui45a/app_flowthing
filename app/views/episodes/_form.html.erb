<h2 class="section-title">
  <span class="melon-text">N</span>ode <span class="sakura-text">T</span>hing</span>
</h2>
<div class="fabric">
  <%= f.fields_for :episode, episode do |episode_form| %>
    <div id="episodeimagePreview"></div>

      <div id="fabricSwitchEpi">
        <!-- 描画ツール  -->
        <div id="canvas-making-3">
          <div class="dropzone" id="dropzone-3">
            <div class="canvas-container-parent">
              <canvas id="iconmakingCanvas-3" class="myCanvas" width="600" height="400"></canvas><br>
            </div>

            <div class="draggable" id="colorPalette-3">
              <div class="icon-palletbox">
                <div class="tool-title"><span>ツール</span></div>
                <div class="undo-redo flex-between">
                  <div id="undo-3" class="pain-button"><i class="bi bi-reply-fill"></i></div>
                  <div id="redo-3" class="bi-reply-fill-right pain-button"><i class="bi bi-reply-fill"></i></div>
                  <div id="delete-3" class="draw disabled-input pain-button"><i class="bi bi-trash3-fill"></i></div>
                  <div id="colorPreview-3" class="colorpreview"></div>
                </div>
                <div id="picker-3" class="pickertool"></div>
                
                <div class="pallettool flex-between">
                  <div id="usePenTool-3" class="pain-button">
                    <i class="bi bi-pencil-fill"></i>
                  </div>
                  <div id="useEraserTool-3" class="pain-button">
                    <i class="bi bi-eraser-fill"></i>
                  </div>
                  <div id="editMode-3" class="draw pain-button">
                    <i class="bi bi-box-arrow-in-up-left"></i>
                  </div>
                  <div id="useTextTool-3" class="pain-button">
                    <i class="bi bi-fonts"></i>
                  </div>
                  <div>
                    <div id="useRectangleTool-3" class="pain-button">
                      <i class="bi bi-bounding-box-circles"></i>
                    </div>
                  </div>
                </div>

                <div class="pallettool-special flex-between">
                  <div class="palletBox specialColorBox" id="blackBox-3"></div>
                  <div class="palletBox specialColorBox" id="whiteBox-3"></div>
                  <div id="dropperColorMode-3" class="pain-button"><i class="bi bi-eyedropper"></i></div>
