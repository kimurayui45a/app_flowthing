                </div>
                <div class="pallettool-free">
                  <div class="freepalletBox"><div class="palletBox" id="palletbox1-3"></div></div>
                  <div class="freepalletBox"><div class="palletBox" id="palletbox2-3"></div></div>
                  <div class="freepalletBox"><div class="palletBox" id="palletbox3-3"></div></div>
                  <div class="freepalletBox"><div class="palletBox" id="palletbox4-3"></div></div>
                  <div class="freepalletBox"><div class="palletBox" id="palletbox5-3"></div></div>
                  <div class="freepalletBox"><div class="palletBox" id="palletbox6-3"></div></div>
                  <div class="freepalletBox"><div class="palletBox" id="palletbox7-3"></div></div>
                  <div class="freepalletBox"><div class="palletBox" id="palletbox8-3"></div></div>
                  <div class="freepalletBox"><div class="palletBox" id="palletbox9-3"></div></div>
                  <div class="freepalletBox"><div class="palletBox" id="palletbox10-3"></div></div>
                </div>
                <div>
                  <div class="freepalletBox"><div class="palletBox" id="palletbox11-3"></div></div>
                  <div class="freepalletBox"><div class="palletBox" id="palletbox12-3"></div></div>
                  <div class="freepalletBox"><div class="palletBox" id="palletbox13-3"></div></div>
                  <div class="freepalletBox"><div class="palletBox" id="palletbox14-3"></div></div>
                  <div class="freepalletBox"><div class="palletBox" id="palletbox15-3"></div></div>
                  <div class="freepalletBox"><div class="palletBox" id="palletbox16-3"></div></div>
                  <div class="freepalletBox"><div class="palletBox" id="palletbox17-3"></div></div>
                  <div class="freepalletBox"><div class="palletBox" id="palletbox18-3"></div></div>
