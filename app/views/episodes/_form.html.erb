                  <div class="fontsize-form">テキストサイズ：<input type="number" id="fontSizeForm-3" min="10" max="100" value="20"><span>px</span></div>
                </div>
              </div>
            </div>

          </div>

          

        </div>
      </div>

      <div class="user-createform">
        <div id="episodeImageInput">
            <%= episode_form.label :episode_image, t('episodes.form.episode_image') %>
            <%= episode_form.file_field :episode_image, class: "form-control", accept: 'image/*', id: "episode_image" %>
          </div>

          
            <%= episode_form.label :episode_canvas, t('episodes.form.episode_canvas') %>
            <%= episode_form.hidden_field :episode_canvas, id: "episode_canvas" %>
          
        </div>
      </div>

      <div class="user-createform">
        <div>
          <%= episode_form.label :episode_title, t('episodes.form.episode_title') %>
          <%= episode_form.text_field :episode_title, class: "form-control" %>
        </div>
        <div>
          <%= episode_form.label :episode_text, t('episodes.form.episode_text') %>
          <%= episode_form.text_area :episode_text, class: "form-control", row: 10, style: "height: 200px" %>
        </div>
      </div>
  <% end %>
</div>